<Window x:Class="PhotoLibrary.Views.AddDefect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddDefect" Height="150" Width="350">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="Detail">
                    <GroupBox.Resources>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Margin" Value="0 2 0 2" />
                        </Style>
                    </GroupBox.Resources>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="Defect Name" />
                            <TextBox Name="DefectTextbox" Width="220" KeyDown="TextBox_KeyDown" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <Button Content="Submit" Width="80" Height="30" FontSize="15" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
